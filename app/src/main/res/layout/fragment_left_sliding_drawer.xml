<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DADADA"
    tools:context="com.jackrabbitmobile.junta.NavigationDrawerFragment">

    <TextView
        android:id="@+id/left_sliding_group_name_tv"
        android:text="Group Name Here"
        android:layout_width="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content" />


    <ImageButton
        android:id="@+id/left_sliding_add_contact_bt"
        android:layout_width="wrap_content"
        android:gravity="center_horizontal"
        android:layout_alignParentRight="true"
        android:src="@android:drawable/ic_input_add"
        android:layout_alignParentTop="true"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/left_sliding_members_header"
        android:text="Current Members:"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="80dp"
        android:textColor="#ffffff"
        android:background="#000000"
        android:layout_below="@id/left_sliding_add_contact_bt"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/left_sliding_users_rv"
        android:layout_below="@+id/left_sliding_members_header"
        android:scrollbars="vertical"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


</RelativeLayout>