<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.Base">
        <!-- Customize your theme here. -->

    </style>
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primaryBlue</item>
        <item name="colorPrimaryDark">@color/darkerBlue</item>
        <item name="colorAccent">@color/accentColor</item>
        <item name="colorControlHighlight">@color/colorHighlight</item>
    </style>
    <style name="MyCustomToolBarTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColorPrimary">#ffffff</item>
        <item name="android:textColorSecondary">#ffffff</item>
    </style>

    <style name="button_login" >
        <item name="android:layout_width" >220dp</item>
        <item name="android:layout_height" >40dp</item>
        <item name="android:textColor" >@color/primaryBlue</item>
        <item name="android:gravity" >center</item>
        <item name="android:textSize" >16sp</item>
        <item name="android:textStyle" >bold</item>
        <item name="android:textColorHint">@color/primaryBlue</item>
    </style>

</resources>
